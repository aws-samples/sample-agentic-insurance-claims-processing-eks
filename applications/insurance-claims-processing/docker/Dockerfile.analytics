# Analytics and Actuarial Models Service
# For advanced analytics, ML models, and actuarial calculations

FROM --platform=linux/amd64 python:3.11-slim as builder

# Install build dependencies including ML libraries
RUN apt-get update && apt-get install -y \
    gcc \
    g++ \
    gfortran \
    libopenblas-dev \
    liblapack-dev \
    libblas-dev \
    libhdf5-dev \
    pkg-config \
    && rm -rf /var/lib/apt/lists/*

# Copy requirements and install Python dependencies
COPY requirements-production.txt requirements-analytics.txt ./
RUN pip install --no-cache-dir --user --upgrade pip && \
    pip install --no-cache-dir --user -r requirements-production.txt && \
    pip install --no-cache-dir --user -r requirements-analytics.txt

# Production stage
FROM --platform=linux/amd64 python:3.11-slim

# Create non-root user for security
RUN groupadd -r analytics && useradd -r -g analytics analytics

# Set working directory
WORKDIR /app

# Install runtime dependencies for ML libraries
RUN apt-get update && apt-get install -y \
    curl \
    libopenblas0 \
    libgomp1 \
    && rm -rf /var/lib/apt/lists/* \
    && apt-get clean

# Copy Python packages from builder stage
COPY --from=builder /root/.local /home/analytics/.local

# Copy application source code
COPY --chown=analytics:analytics src/analytics/ ./src/analytics/
COPY --chown=analytics:analytics src/shared/ ./src/shared/

# Create model cache directory
RUN mkdir -p /app/models && chown analytics:analytics /app/models

# Set environment variables
ENV PYTHONPATH=/app
ENV PYTHONUNBUFFERED=1
ENV PATH=/home/analytics/.local/bin:$PATH
ENV MODEL_CACHE_DIR=/app/models

# Switch to non-root user
USER analytics

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=60s --retries=3 \
    CMD curl -f http://localhost:8004/health || exit 1

# Expose port
EXPOSE 8004

# Run the analytics service
CMD ["python", "-m", "uvicorn", "src.analytics.main:app", "--host", "0.0.0.0", "--port", "8004", "--workers", "1"]